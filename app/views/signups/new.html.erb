<div class="the-form">
<h1>Get the Latest Updates from Stories</h1>
<%= form_for(@signup) do |f| %>  
  <div class="field"> 
    <%= f.label :firstname %><br>
    <%= f.text_area :firstname %> <br>
    <%= f.label :email %><br>
    <%= f.text_area :email %> 
  </div> 
  <div class="actions"> 
    <%= f.submit "Join" %> 
  </div> 
<% end %>
</div>